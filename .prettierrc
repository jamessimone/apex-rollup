{
  "trailingComma": "none",
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 160,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
    {
      "files": "*.{cls, apex}",
      "options": { "parser": "apex" }
    },
    {
      "files": "**/*.xml",
      "options": { "parser": "xml" }
    }
  ],
  "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
  "$schema": "https://json.schemastore.org/prettierrc"
}
